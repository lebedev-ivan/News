@{
    ViewBag.Title = "Регистрация";
}

<h2 style="text-align: center;">Регистрация</h2>

<p style="color: red; text-align: center;">@ViewBag.Message</p>

<div style="display: flex; justify-content: center; align-items: center; height: 80vh;">
    <form asp-controller="Account" asp-action="Registration" method="post"
          style="display: flex; flex-direction: column; gap: 10px; padding: 20px; border: 1px solid #ccc; border-radius: 5px; background: #f9f9f9;">
        <input type="text" name="name" placeholder="Имя пользователя" required style="padding: 10px; width: 250px;" />
        <input type="password" name="password" placeholder="Пароль" required style="padding: 10px; width: 250px;" />
        <button type="submit" style="background-color: red; color: white; padding: 10px; border: none; cursor: pointer;">Зарегистрироваться</button>
    </form>
</div>
